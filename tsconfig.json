{
    "compilerOptions": {
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "target": "es5",
      "module": "commonjs",
      "declaration": true,
      "outDir": "./lib",
      "strict": true,
      "noImplicitAny": false,
      "strictNullChecks": false,
      "watch": true,
      
      "lib": [
        "es2016",
        "es2015",
        "dom",
        "es5"
      ]
    },
      "include": [
        "./src/**/*.ts"
      ],
      
    "exclude":[
      "./test/**/*.spec.ts"
    ]
  }